@page "/"

<MudPaper Elevation="4" Class="pa-4">

    <MudText Typo="MudBlazor.Typo.h4" Align="MudBlazor.Align.Center">Consultar por Cidade</MudText>

    <EditForm Model="@cidade" >
        <MudButton OnClick="HandleValidSubmit">ok</MudButton>

        <DataAnnotationsValidator />
        <ValidationSummary />

        <MudTextField For="@(() => cidade.Nome)"
                      Label="Nome da Cidade"
                      Variant="Variant.Filled"
                      FullWidth="true"
                      Margin="Margin.Normal" />
    </EditForm>

</MudPaper>


@code{

    public Cidade cidade { get; set; } = new();

     async  Task HandleValidSubmit()
    {
        Console.WriteLine($"Formulário enviado com sucesso! {cidade.Nome}");
    }

}
